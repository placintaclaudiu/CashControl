<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CashControl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/20.4.48/material.css" />*@
    <link href="https://cdn.syncfusion.com/ej2/20.4.48/bootstrap5.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"> @*pentru a importa icons*@
    @*<link href="https://fonts.googleapis.com/css2?family=Golos+Text:wght@400;600;800&family=Oswald:wght@500&display=swap" rel="stylesheet">*@
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CashControl.styles.css" asp-append-version="true" />
    <script src="https://cdn.syncfusion.com/ej2/20.4.48/dist/ej2.min.js"></script>
</head>
<body class="e-bigger">
    <header> 
        @*Nav bar*@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img class="navbar-logo" src="~/poze/money_icon.png" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav d-flex justify-content-center flex-grow-1">  @* Am adaugat d-flex si justify content pentru a centra elementele din navbar*@
                        <li class="nav-item">
                            <a class="nav-link text-dark bi bi-house-door" asp-area="" asp-controller="Home" asp-action="Index">Acasa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark bi bi-list" asp-area="" asp-controller="Categories" asp-action="Index">Categorii</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark bi bi-cash-coin" asp-area="" asp-controller="Transactions" asp-action="Index">Tranzactii</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark bi bi-speedometer2" asp-area="" asp-controller="Dashboard" asp-action="Index">Tablou</a>
                        </li>
                       @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@                  
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="com-md-10">
                <main role="main" class="pb-3">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="d-flex flex-column mb-5">
                                <div class="d-flex mb-1 child">
                                    @*clasa child pt centrare*@
                                    <div class="flex-grow-1">
                                        <h3 class="fw-bold">@ViewData["TitluPagina"]</h3>
                                    </div>
                                    <div style="position:relative; left:550px; top:2px;">
                                        @if (ViewData["CreareText"] != null)
                                        {
                                            <a class="btn btn-success" style="color: white" href="@ViewData["CreareURL"]">
                                                @ViewData["CreareText"]
                                            </a>
                                        }
                                    </div>
                                </div>
                                @* portiunea pentru breadcrumb*@
                                @*  <ejs-breadcrumb id="breadcrumb"></ejs-breadcrumb>*@
                            </div>
                        </div>
                    </div>
                    @RenderBody()
                </main>
            </div>
        </div>

    </div>

    @* Buton up to top*@
    <div class="up-to-top">
        <button id="scroll-to-top-button" onclick="scrollToTop()"><i class="bi bi-arrow-up-short"></i></button>
    </div>
    
    @* Footer *@

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="left">
                <p>&copy; 2023 - CashControl</p>
            </div>
            <div class="right">
                <nav>
                    <a href="#" class="social-icon"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="social-icon"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="social-icon"> <i class="bi bi-github"></i></a>
                    <a asp-area="" asp-controller="Home" asp-action="Contact">Contacteaza-ne</a>
                    <a asp-area="" asp-controller="Home" asp-action="Despre">Despre</a>
                    <a asp-area="" asp-controller="Home" asp-action="TermeniConditii">Termeni si conditii</a>
                </nav>
            </div>
        </div>
    </footer>

    <script>
        const scrollToTopButton = document.getElementById("scroll-to-top-button");
        window.addEventListener("scroll", () => {
            if (window.pageYOffset > 0) {
                scrollToTopButton.style.display = "block";
            } else {
                scrollToTopButton.style.display = "none";
            }
        });

        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: "smooth" });
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/qrcode.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <ejs-scripts></ejs-scripts>
    
</body>
</html>
