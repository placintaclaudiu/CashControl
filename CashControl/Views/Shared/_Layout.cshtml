<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CashControl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/20.4.48/material.css" />*@
    <link href="https://cdn.syncfusion.com/ej2/20.4.48/bootstrap5.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"> @*pentru a importa icons*@
    <link href="https://fonts.googleapis.com/css2?family=Golos+Text:wght@400;600;800&family=Oswald:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CashControl.styles.css" asp-append-version="true" />
    <script src="https://cdn.syncfusion.com/ej2/20.4.48/dist/ej2.min.js"></script>
</head>
<body class="e-bigger">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img class ="navbar-logo" src="~/poze/money_icon.png" /> </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav d-flex justify-content-center flex-grow-1">  @* Am adaugat d-flex si justify content pentru a centra elementele din navbar*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Acasa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">Categorii</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Transactions" asp-action="Index">Tranzactii</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="com-md-10">
                <main role="main" class="pb-3">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="d-flex flex-column mb-5">
                                <div class="d-flex mb-1 child"> @*clasa child pt centrare*@
                                    <div class="flex-grow-1">
                                        <h3 class="fw-bold">@ViewData["TitluPagina"]</h3>
                                    </div>
                                    <div style="position:relative; left:550px; top:2px;">
                                        @if (ViewData["CreareText"] != null)
                                        {
                                             <a class="btn btn-success" style="color: white" href="@ViewData["CreareURL"]">
                                            @ViewData["CreareText"]
                                        </a>
                                        }                                      
                                    </div>
                                </div>
                                @* portiunea pentru breadcrumb*@
                              @*  <ejs-breadcrumb id="breadcrumb"></ejs-breadcrumb>*@
                            </div>
                        </div>
                    </div>
                    @RenderBody()
                </main>
            </div>
        </div>
        
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CashControl - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <ejs-scripts></ejs-scripts>
</body>
</html>
